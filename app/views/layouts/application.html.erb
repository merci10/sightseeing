<!DOCTYPE html>
<html>
<head>
  <title>Localstand</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Dosis:300,400,500,600,700">
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <div class="header-left">
    <%= link_to "SS", root_path %>
  </div>
  <% if user_signed_in? %>
  <div class="header-right">
    <ul>
      <li><%= link_to "投稿する", new_note_path %></li>
      <li><%= link_to "投稿一覧", notes_path %></li>
      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
      <li><%= link_to current_user.name, user_path(current_user.id) %></li>
    </ul>
  <% else %>
  <div class="header-right">
    <ul>
      <li><%= link_to "アカウント作成", new_user_registration_path %></li>
      <li><%= link_to "ログイン", new_user_session_path %></li>
    </ul>
  </div>
  <% end %>
</header>

<%= yield %>

<footer>
  
</footer>

</body>
</html>
