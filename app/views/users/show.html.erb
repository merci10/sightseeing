<div class="top-bar">
  <div class="container-1">
    アカウント情報
  </div>
</div>
<p id="notice" class="notice"><%= notice %></p>


<div class="container-2">

  <div class="user-info" >
      <%= image_for(@user) %>

    <div class="name-mail" >
      <ul>
        <li><%= @user.name %></li>
        <li><%= @user.email %></li>
      </ul>
    </div>
    <% if current_user?(@user) %>
      <div class="edit">
        <%= link_to '編集', edit_user_path(@user.id), class: "edit-btn" %>
      </div>
    <% end %>

  <%= link_to @user.likes.count, like_notes_user_path(@user.id) %>件の投稿にいいね！しています
  
  </div>


  <div class="image-contents">
    <% @user.notes.each do |note| %>
      <%= link_to note do %>
        <%= image_tag "/user_images/#{note.image}", class: "images" %>
      <% end %>
    <% end %>
    <div class="images"></div>
    <div class="images"></div>
    <div class="images"></div>
    <div class="images"></div>
    <div class="images"></div>
    <div class="images"></div>
    <div class="images"></div>
  </div>
  <div class="clear"></div>

</div>


