<%= form_for(@user) do |f| %>
<div class="container-1">
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= @note.errors.count %>件のエラーがあります。</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class="form-wrapper">
  <div class="container-2">
    <div class="edit-form">
      <div class="field">
        画像
        <%= f.file_field :image, class: "form-box" %>
      </div>

      <div class="field">
        名前
        <%= f.text_field :name, class: "form-box" %>
      </div>

      <div class="field">
        メールアドレス
        <%= f.text_field :email, class: "form-box" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "保存" %>
    </div>
  </div>
</div>

<% end %>