<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= @note.errors.count %>件のエラーがあります。</h2>

      <ul>
        <% @note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-wrapper">
  <div class="container-2">
    <div class="new-form edit-form">
      <div class="field">
      <%= f.file_field :image, class: "form-box" %>
      </div>

      <div>
      <%= f.text_field :address, placeholder: "場所", class: "form-box" %>
      </div>

      <div class="field">
      <%= f.text_field :title, placeholder: "タイトル", class: "form-box" %>
      </div>

      <div class="field">
      <%= f.text_area :content, placeholder: "コメント", class: "form-box" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "保存" %>
    </div>
  </div>
</div>

<% end %>